#include <stdio.h>

#define BUFFER_SIZE 5

int buffer[BUFFER_SIZE] = {0};
int head = 0;
int count = 0;

void insertSample(int value) {
    buffer[head] = value;
    head = (head + 1) % BUFFER_SIZE;

    if (count < BUFFER_SIZE) {
        count++;
    }
}

void printSamples() {
    int i;
    int index;

    if (count == 0) {
        printf("No samples stored.\n");
        return;
    }

    index = (head - count + BUFFER_SIZE) % BUFFER_SIZE;

    printf("Stored samples (oldest â†’ newest): ");
    for (i = 0; i < count; i++) {
        printf("%d ", buffer[index]);
        index = (index + 1) % BUFFER_SIZE;
    }
    printf("\n");
}

int main() {
    int value, choice;

    while (1) {
        printf("\n1. Insert sensor value");
        printf("\n2. Print stored samples");
        printf("\n3. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        if (choice == 1) {
            printf("Enter sensor value: ");
            scanf("%d", &value);
            insertSample(value);
        }
        else if (choice == 2) {
            printSamples();
        }
        else if (choice == 3) {
            break;
        }
        else {
            printf("Invalid choice!\n");
        }
    }

    return 0;
}
